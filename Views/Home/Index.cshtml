 @model IEnumerable<To_Do_List.Models.List>
@if (ViewBag.UserName != null)
{
    <div class="d-flex justify-content-between align-items-center my-5">
        <h3 class="mb-0">
            Welcome @ViewBag.UserName!
        </h3>
        
        <a asp-controller="List" asp-action="NewListDetails" class="btn btn-primary btn-lg shadow-sm">
            + Add New Task
        </a>
    </div>

    <hr />

    @if (!Model.Any())
    {
        <p>No tasks yet. Click above to add one!</p>
    }
    else
    {
        <ul class="list-group">
            @foreach (var list in Model)
            {
                <li class="list-group-item d-flex justify-content-between align-items-center hover-list" 
                            onclick="location.href='@Url.Action("ListDetails", "List", new { id = list.Id })'">
                    <strong>@list.Title</strong>
                   
                    <span class="badge bg-secondary">
                        Created on: @list.Creation_Date.ToString("dd MMM yyyy")
                    </span>
                </li>
            }
        </ul>
    }
}


<style>
    .hover-list {
        transition: all 0.2s ease-in-out;
        cursor: pointer;
    }

        .hover-list:hover {
            background-color: #f0f8ff;
            transform: scale(1.02);
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }
</style>
